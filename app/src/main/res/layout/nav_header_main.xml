<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="#958BC34A"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_white_card">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:layout_centerInParent="true"
                android:contentDescription="@string/nav_header_desc"
                android:layout_weight="0.1"
                app:srcCompat="@drawable/splash"/>

        </RelativeLayout>



        <TextView
            android:id="@+id/user_welcome"
            android:visibility="gone"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingTop="8dp"
            android:layout_weight="0.8"
            android:textColor="#7E7E7E"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/login_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Login"
            android:layout_weight="0.8"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/ptsans_bold"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/preference"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingTop="8dp"
            android:layout_gravity="center_vertical|end"
            android:src="@drawable/man"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingBottom="19dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/cart_header_lay"
            android:background="@drawable/rounded_header_card"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/header_cart"
                android:background="@drawable/shopping_cart"
                android:layout_width="20dp"
                android:layout_centerInParent="true"
                android:layout_height="20dp"/>

            <TextView
                android:text="CART"
                android:layout_marginTop="4dp"
                android:layout_below="@id/header_cart"
                android:layout_centerHorizontal="true"
                android:textColor="#7C000000"
                android:textSize="12sp"
                android:fontFamily="@font/ptsans_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/whishlist_header_layout"
            android:background="@drawable/rounded_header_card"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/header_wishlist"
                android:background="@drawable/wishlist"
                android:layout_width="20dp"
                android:layout_centerInParent="true"
                android:layout_height="20dp"/>

            <TextView
                android:text="WISHLIST"
                android:layout_below="@id/header_wishlist"
                android:layout_centerHorizontal="true"
                android:textColor="#8B000000"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:fontFamily="@font/ptsans_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/history_header_layout"
            android:background="@drawable/rounded_header_card"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/header_history"
                android:background="@drawable/purchase_history"
                android:layout_width="20dp"
                android:layout_centerInParent="true"
                android:layout_height="20dp"/>

            <TextView
                android:text="HISTORY"
                android:layout_below="@id/header_history"
                android:layout_centerHorizontal="true"
                android:textColor="#8B000000"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:fontFamily="@font/ptsans_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

